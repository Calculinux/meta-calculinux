+static void ApplyGammaRamp() {
+	if (!sdl_window || !gamma_ramp_supported)
+		return;
+
+	int result;
+	if (!init_gamma_valid) {
+		result = SDL_GetWindowGammaRamp(sdl_window, init_gamma_red, init_gamma_green, init_gamma_blue);
